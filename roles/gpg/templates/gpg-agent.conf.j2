# GPG Agent Configuration File
# Generated by Ansible - Do not edit manually

# Cache timeouts
default-cache-ttl 1800
max-cache-ttl 3600

# Pinentry program
{% if gpg_pinentry_program %}
pinentry-program {{ gpg_pinentry_program }}
{% endif %}

# Prevent external password caching
no-allow-external-cache

# Disable scdaemon for better performance if not using smartcards
disable-scdaemon